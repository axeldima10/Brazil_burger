{% extends "admin/liste.html.twig" %}

{% block title %}
    liste des frites
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}


    {% block liste_head %}
        liste des frites
    {% endblock %}

    {% block liste_add %}
        <a href="{{path("add_frite",{id:0})}}" class="btn btn-primary"><i class="fa fa-plus"></i> new frites</a>
    {% endblock %}

    {% block liste_body %}
        
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Prix</th>
                <th>disponibilite</th>
                <th>description</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Libelle</th>
                <th>Prix</th>
                <th>disponibilite</th>
                <th>description</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </tfoot>
        <tbody>
            {% for frite in frites %}
                <tr id="f{{frite.getId1()}}" >
                    <td>{{frite.libelle}}</td>
                    <td>{{frite.prix}}</td>
                    <td>{{frite.disponibilite ? "disponible" : "rupture de stock"}}</td>
                    <td>{{frite.description}}</td>
                    {% if frite.images.values is empty %}
                        <td></td>
                    {% else %}
                        <td><img src="{{asset("images/frites/")}}{{frite.images.values[0].libelle}}" alt="" style="width:50px" /></td>
                    {% endif %}
                    <td><button class="btn btn-danger mr-3 ml-3 del" data-id="{{frite.getId1()}}" data-path="{{path("del_frite",{id:frite.getId1()})}}"><i class="fa fa-trash"></i></button>
                        <a class="btn btn-warning" href="{{path("add_frite",{id:frite.getId1()})}}"><i class="fa fa-edit"></i></a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">la liste des frites est vide</td>
                </tr>
            {% endfor %}
        </tbody>
            
  
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
    $(function(){
        $('.del').on('click', function(){
            const id=$(this).data('id')
            const deleted= document.getElementById("f"+id)
            const path =$(this).data('path')
            $.ajax({
                url: path,
                type: 'GET',
                async: true,
                success: function(data){
                },
                error: function(xhr, status, error){
                    deleted.style.display="none"
                    console.log(xhr, status, error)
                }
            });
        });
        
    })
    </script>
{% endblock %}